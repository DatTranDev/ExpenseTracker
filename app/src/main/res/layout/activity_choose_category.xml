<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <variable
            name="ChooseCategoryViewModel"
            type="com.example.expensetracker.viewmodel.addTransactionVM.ChooseCategoryViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/btnBackCategory"
                android:layout_width="28dp"
                android:layout_marginLeft="20dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_back_green" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:text="Chọn khoản chi" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnTest"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginEnd="0dp"
                        android:background="@drawable/background_button_add_category"
                        android:drawableStart="@drawable/ic_plus_white"
                        android:fontFamily="@font/inter_semibold"
                        android:paddingStart="8dp"
                        android:paddingEnd="12dp"
                        android:text="Thêm mới"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="16.5sp" />
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewCategory"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="25dp"
            android:layout_gravity="center">

        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>


</layout>