<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="340dp"
    android:layout_height="90dp"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/background_border_white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="04"
        android:textSize="40sp"
        android:id="@+id/text_ngay"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/inter_semibold"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/text_thu"
        android:layout_marginTop="11dp"
        android:fontFamily="@font/inter_regular"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/text_ngay"
        android:textSize="13sp"
        android:layout_marginLeft="10dp"
        android:text="Thứ hai"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_thu"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/medium_gray"
        app:layout_constraintStart_toEndOf="@id/text_ngay"
        android:textSize="10sp"
        android:text="Tháng 4, 2024"/>

</androidx.constraintlayout.widget.ConstraintLayout>