<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340dp"
    android:layout_height="145dp"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/background_border_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageCategory"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="12dp"
            android:src="@drawable/ic_move" />

        <TextView
            android:id="@+id/nameCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/inter_regular"
            android:text="Di chuyển"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/money_budget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"
            android:fontFamily="@font/inter_regular"
            android:text="500.000"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/ic_time_budget" />

        <TextView
            android:id="@+id/timeBudget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12.5sp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:layout_marginLeft="14dp"
            android:text="01/04 - 30/04" />
    </LinearLayout>
    <ProgressBar
        android:id="@+id/progress_budget"
        android:layout_width="300dp"
        android:layout_height="4dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:background="@drawable/background_border_white"
        android:progressBackgroundTint="@color/medium_gray"
        android:progressTint="@color/green"
        style="?android:attr/progressBarStyleHorizontal"
        android:progress="25"/>

<!--    <ImageView-->
<!--        android:id="@+id/imageView13"-->
<!--        android:layout_gravity="center"-->
<!--        android:layout_marginTop="15dp"-->

<!--        android:background="@drawable/background_border_white"-->
<!--        android:layout_width="300dp"-->
<!--        android:layout_height="4dp"-->
<!--        android:src="@drawable/gray_line" />-->

    <TextView
        android:id="@+id/moneyEnabled"
        android:gravity="right"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:fontFamily="@font/inter_regular"
        android:layout_marginTop="8dp"
        android:textSize="12sp"
        android:text="Còn lại 400.000" />
</LinearLayout>