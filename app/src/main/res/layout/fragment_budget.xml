<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F6F8FC"
    android:backgroundTint="#F6F8FC">

    <TextView
        android:id="@+id/textView18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_semibold"
        android:textSize="22sp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="Ngân sách" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="145dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="14dp" />

    <ImageView
        android:layout_width="210dp"
        android:layout_height="1.2dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:src="@drawable/gray_line" />

    <LinearLayout
        android:layout_marginTop="13dp"
        android:layout_width="340dp"
        android:layout_height="130dp"
        android:backgroundTint="#67F65B"
        android:background="@drawable/background_border_white"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_regular"
            android:text="Còn lại" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:layout_gravity="center"
            android:textSize="35sp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:text="5.000.000" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="25dp">

                <TextView
                    android:id="@+id/textView21"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:fontFamily="@font/inter_regular"
                    android:text="Tổng ngân sách" />

                <TextView
                    android:id="@+id/textView22"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="@font/inter_regular"
                    android:layout_marginTop="3dp"
                    android:text="6.000.000"
                    android:gravity="center"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="1.2dp"
                android:layout_height="27dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/black_line" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="25dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:fontFamily="@font/inter_regular"
                    android:text="Tổng đã chi" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:fontFamily="@font/inter_regular"
                    android:text="1.000.000"
                    android:layout_marginTop="3dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/buttonAddBudget"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="Thêm ngân sách"
        android:backgroundTint="#00DDB0"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:fontFamily="@font/inter_semibold"/>
    <ImageView
        android:id="@+id/image_test"
        android:layout_width="210dp"
        android:layout_height="1.2dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:src="@drawable/gray_line" />
</LinearLayout>