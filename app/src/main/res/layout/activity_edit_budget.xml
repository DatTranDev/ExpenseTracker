<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/btnBack2"
                android:layout_width="28dp"
                android:layout_marginLeft="20dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_back_green" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="center"
                android:layout_marginRight="48dp"
                android:text="Sửa ngân sách" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="22dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/money_budget"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:autofillHints="1"
                android:ems="10"
                android:textColor="@color/green"
                android:gravity="center"
                android:text="@={}"
                android:inputType="number"
                android:textSize="40sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"

                android:fontFamily="@font/montserrat_semibold"
                android:gravity="bottom"
                android:layout_marginLeft="2dp"
                android:text="đ"
                android:textSize="30sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layout_category"
            android:layout_width="320dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:background="@drawable/background_border_white"
            android:backgroundTint="@null">
            <TextView
                android:id="@+id/nameCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="75dp"
                android:layout_marginTop="28dp"
                android:fontFamily="@font/inter_semibold"
                android:text="Sửa xe"
                android:textSize="16sp" />



            <ImageView
                android:id="@+id/image_category"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="252dp"
                android:layout_marginBottom="14dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_category" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="74dp"
                android:layout_marginTop="11dp"
                android:fontFamily="@font/inter_regular"
                android:text="Danh mục"
                android:textSize="14sp" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/lay_time"
            android:layout_width="320dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/background_border_white"
            android:backgroundTint="@null">
            <Spinner
                android:id="@+id/choosePeriod"
                android:layout_width="220dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:textSize="35sp"
                android:layout_gravity="center"
                android:layout_marginEnd="33dp"
                android:layout_marginBottom="10dp"
                >

            </Spinner>


            <!--                    <ImageView-->
            <!--                        android:id="@+id/line4"-->
            <!--                        android:layout_width="80dp"-->
            <!--                        android:layout_height="1dp"-->
            <!--                        android:layout_alignParentEnd="true"-->
            <!--                        android:layout_alignParentBottom="true"-->
            <!--                        android:layout_gravity="center"-->
            <!--                        android:layout_marginEnd="165dp"-->
            <!--                        android:layout_marginBottom="20dp"-->
            <!--                        android:layout_weight="1"-->
            <!--                        android:src="@drawable/black_line" />-->

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="252dp"
                android:layout_marginBottom="15dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_calendar1" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="74dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/inter_regular"
                android:text="Thời gian"
                android:textSize="14sp" />
        </RelativeLayout>
        <!--        <Button-->
        <!--            android:id="@+id/button1"-->
        <!--            android:layout_width="125dp"-->
        <!--            android:layout_height="52dp"-->
        <!--            android:layout_gravity="center"-->
        <!--            android:layout_marginTop="50dp"-->
        <!--            android:backgroundTint="#E4E4E4"-->
        <!--            android:textColor="#4C4949"-->
        <!--            android:enabled="false"-->
        <!--            android:visibility="@{(AddBudgetViewModel.btnEnabled==false) ? View.VISIBLE : View.GONE}"-->
        <!--            android:fontFamily="@font/inter_semibold"-->
        <!--            android:text="Lưu"-->
        <!--            android:textSize="15sp" />-->
        <Button
            android:id="@+id/accept"
            android:layout_width="125dp"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:backgroundTint="#00DDB0"
            android:fontFamily="@font/inter_semibold"
            android:text="Lưu"
            android:textSize="15sp" />

    </LinearLayout>
    <FrameLayout
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        android:gravity="center">

        <ProgressBar
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"/>
    </FrameLayout>

</FrameLayout>