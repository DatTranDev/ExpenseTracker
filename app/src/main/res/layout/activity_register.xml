<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="20dp"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tạo tài khoản"
        android:textSize="24sp"
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="@color/accent_green"
        android:id="@+id/textView"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/textViewHVT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Họ tên"
        android:textColor="@color/dark_gray"
        android:textSize="16sp"
        android:fontFamily="@font/montserrat_semibold"
        app:layout_constraintTop_toTopOf="@id/textView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="50dp"
        >
    </TextView>
    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/input_text"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:paddingVertical="16dp"
        android:textColor="@color/light_gray"
        android:text="Họ và tên"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/textViewHVT"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:id="@+id/textViewMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="@color/dark_gray"
        android:textSize="16sp"
        android:fontFamily="@font/montserrat_semibold"
        app:layout_constraintTop_toTopOf="@id/editTextTextPersonName"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="60dp" />
    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/input_text"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:paddingVertical="20dp"
        android:textColor="@color/light_gray"
        android:text="Email"
        android:textSize="16sp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="@id/textViewMail"
        />
    <TextView
        android:id="@+id/textViewPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mật khẩu"
        android:textColor="@color/dark_gray"
        android:textSize="16sp"
        android:fontFamily="@font/montserrat_semibold"
        app:layout_constraintTop_toTopOf="@id/editTextTextEmailAddress"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="60dp" />
    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="Password"
        android:textSize="16sp"
        android:textColor="@color/light_gray"
        android:background="@drawable/input_text"
        android:inputType="textPassword"
        android:padding="10dp"
        android:paddingVertical="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="@id/textViewPassword"
         />
        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tôi đồng ý với điều khoản sử dụng"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:checked="true"
            android:fontFamily="@font/montserrat_semibold"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/editTextTextPassword"
            />
        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@color/accent_green"
            android:text="Đăng ký"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_semibold"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/checkBox" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã có tài khoản?"
                android:textColor="@color/dark_gray"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat"
                />
            <TextView
                android:id="@+id/textViewLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng nhập"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat_semibold"
                android:layout_marginStart="5dp"
                />
        </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>