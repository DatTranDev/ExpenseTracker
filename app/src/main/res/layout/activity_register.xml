<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="RegisterViewModel"
            type="com.example.expensetracker.viewmodel.RegisterViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="20dp"
    android:layout_height="match_parent">
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:elevation="999dp"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tạo tài khoản"
        android:textSize="24sp"
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="@color/accent_green"
        android:id="@+id/textView"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/textViewHVT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Họ tên"
        android:textColor="@color/dark_gray"
        android:textSize="16sp"
        android:fontFamily="@font/montserrat_semibold"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        >
    </TextView>
    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/input_text"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:paddingVertical="16dp"
        android:textColor="@color/light_gray"
        android:text="@={RegisterViewModel.userName}"
        android:hint="Họ tên"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/textViewHVT"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:id="@+id/textViewMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="@color/dark_gray"
        android:textSize="16sp"
        android:fontFamily="@font/montserrat_semibold"
        app:layout_constraintTop_toBottomOf="@id/editTextTextPersonName"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp" />
    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/input_text"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:paddingVertical="20dp"
        android:textColor="@color/light_gray"
        android:text="@={RegisterViewModel.email}"
        android:hint="Email"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/textViewMail"
        />
    <TextView
        android:id="@+id/textViewPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mật khẩu"
        android:textColor="@color/dark_gray"
        android:textSize="16sp"
        android:fontFamily="@font/montserrat_semibold"
        app:layout_constraintTop_toBottomOf="@id/editTextTextEmailAddress"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp" />
    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="@={RegisterViewModel.password}"
        android:hint="Mật khẩu"
        android:textSize="16sp"
        android:textColor="@color/light_gray"
        android:background="@drawable/input_text"
        android:inputType="textPassword"
        android:padding="10dp"
        android:paddingVertical="20dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/textViewPassword"
         />
    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tôi đồng ý với điều khoản sử dụng"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:checked="@={RegisterViewModel.isCheck}"
        android:fontFamily="@font/montserrat_semibold"
        android:layout_marginTop="10dp"
        android:buttonTint="@color/light_gray"
        android:buttonTintMode="multiply"
        app:layout_constraintTop_toBottomOf="@id/editTextTextPassword"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:backgroundTint="@color/accent_green"
        android:text="Đăng ký"
        android:onClick="@{()->RegisterViewModel.onClickRegister()}"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_semibold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/checkBox" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/btnRegister"
        android:layout_marginTop="40dp">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/medium_gray"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" hoặc đăng ký với "
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="14sp"
            android:textColor="@color/medium_gray"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/medium_gray"/>
    </LinearLayout>

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnGoogle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Google"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="14sp"
            android:drawableStart="@drawable/logos_google_24dp"
            android:paddingStart="40dp"
            android:paddingEnd="45dp"
            android:textAllCaps="false"
            android:background="@drawable/facebook_button"
            android:textColor="@color/black"
            android:layout_marginEnd="4dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnFacebook"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="@string/facebook"
            android:fontFamily="@font/montserrat_semibold"
            android:drawableStart="@drawable/logos_facebook_24dp"
            android:paddingStart="40dp"
            android:paddingEnd="30dp"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:background="@drawable/facebook_button" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đã có tài khoản?"
            android:textColor="@color/dark_gray"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat"
            />
        <TextView
            android:id="@+id/textViewLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng nhập"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat_semibold"
            android:layout_marginStart="5dp"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
